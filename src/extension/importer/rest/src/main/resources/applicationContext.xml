<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!--
   rest bindings
    -->
  <bean id="importResource" class="org.geoserver.importer.rest.ImportResource">
    <constructor-arg ref="importer"/>
  </bean>

  <bean id="importTaskResource" class="org.geoserver.importer.rest.TaskResource">
    <constructor-arg ref="importer"/>
  </bean>

  <bean id="taskTargetResource" class="org.geoserver.importer.rest.TaskTargetResource">
    <constructor-arg ref="importer"/>
  </bean>

  <bean id="layerResource" class="org.geoserver.importer.rest.LayerResource">
    <constructor-arg ref="importer"/>
  </bean>

  <bean id="importDataResource" class="org.geoserver.importer.rest.DataResource">
    <constructor-arg ref="importer"/>
  </bean>

  <bean id="dirResource" class="org.geoserver.importer.rest.DirectoryResource">
    <constructor-arg ref="importer"/>
  </bean>

  <bean id="txResource" class="org.geoserver.importer.rest.TransformResource">
    <constructor-arg ref="importer"/>
  </bean>
  
  <bean id="importRestMapping" class="org.geoserver.rest.RESTMapping">
    <property name="routes">
      <map>
        <entry>
          <key>
            <value>/imports</value>
          </key>
          <value>importResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}</value>
          </key>
          <value>importResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/data</value>
          </key>
          <value>importDataResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/tasks/{task}/data</value>
          </key>
          <value>importDataResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/data/files</value>
          </key>
          <value>dirResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/data/files/{file}</value>
          </key>
          <value>dirResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/tasks/{task}/data/files</value>
          </key>
          <value>dirResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/tasks/{task}/data/files/{file}</value>
          </key>
          <value>dirResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/tasks</value>
          </key>
          <value>importTaskResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/tasks/{task}</value>
          </key>
          <value>importTaskResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/tasks/{task}/target</value>
          </key>
          <value>taskTargetResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/tasks/{task}/progress</value>
          </key>
          <value>taskTargetResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/tasks/{task}/layer</value>
          </key>
          <value>layerResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/tasks/{task}/transforms</value>
          </key>
          <value>txResource</value>
        </entry>
        <entry>
          <key>
            <value>/imports/{import}/tasks/{task}/transforms/{transform}</value>
          </key>
          <value>txResource</value>
        </entry>
      </map>
    </property>
  </bean>
</beans>
